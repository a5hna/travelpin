<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">






    <div class="carousel-item active">

      <div>
        <p class="text-center "><%= @day_schedules.first.date.strftime("%A, %d %b %Y ") %></p>
        <p><%= @day_schedules.first.notes %></p>
        <div class="card-columns">
          <% @day_schedules.first.experiences.each do |experience| %>
          <!-- Experience Cards -->
          <%= render partial: "experience_card", locals:{ experience: experience} %>

          <% end %>
        </div>
      </div>
    </div>


    <% @day_schedules[1..-1].each do |day_schedule| %>
      <div class="carousel-item">

      <p class="text-center "><%= day_schedule.date.strftime("%A, %d %b %Y ") %></p>
      <p><%= day_schedule.notes %></p>
      <div class="card-columns">
        <% day_schedule.experiences.each do |experience| %>
        <!-- Experience Cards -->
        <%= render partial: "experience_card", locals:{ experience: experience} %>

        <% end %>
      </div>

      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

      <% end %>

      </div>






    <p class="text-center pt-3"><%= link_to "back to board", board_path(params[:board_id]) %></p>
